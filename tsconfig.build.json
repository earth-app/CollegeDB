{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
